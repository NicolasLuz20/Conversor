#Fahrenheit to Celsius

import time

print('Bem vindo ao nosso conversor online')
time.sleep(1) #tempo para próximo print
print('nesse conversor você poderá escolher transformar celsius para fahrenheit ou vice-versa')
print()
time.sleep(2)
print('primeiramente me diga qual opção você deseja')
time.sleep(1)
print()
print('A) Fahrenheit to Celsius')
print('B) Celsius to Fahrenheit')
print()
opcao = str(input('digite a opção: ')).upper()

if opcao == 'A':
    fahrenheit_celsius = float(input('digite o valor em Fahrenheit'))
    resultado = (fahrenheit_celsius -32) * 5/9
    print(f'a conversão de {fahrenheit_celsius} para celsious é {round(resultado,2)} celsius')

elif opcao == 'B':
    celsius_fahrenheit = float(input('digite o valor em celsius'))
    resultado = (celsius_fahrenheit * 9/5) + 32
    print(f'a conversão de {celsius_fahrenheit} para fahrenheit é {round(resultado,2)}')
